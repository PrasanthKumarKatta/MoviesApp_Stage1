<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayout_Details_style"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/view_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DetailsActivity"
    tools:showIn="@layout/activity_details">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">
        <ScrollView
            style="@style/relativeLayout_Details_style"
            >
            <LinearLayout
                style="@style/LinearLayout_Details_style"
                >
                <TextView
                    android:id="@+id/movieTitle"
                    android:text="@string/name_movie"
                    style="@style/content_details_TextView_label"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/title_details"
                    style="@style/content_details_TextView"
                    android:layout_below="@+id/movieTitle"
                    />
                <TextView
                    android:id="@+id/plot"
                    android:text="@string/plot"
                    style="@style/content_details_TextView_label"
                    android:layout_marginTop="@dimen/layout_margin_top"
                    android:layout_below="@+id/title"
                    />
                <TextView
                    android:id="@+id/plotSynopsis"
                    style="@style/content_details_TextView"
                    android:layout_below="@+id/plot"
                    />
                <TextView
                    android:id="@+id/rating"
                    android:text="@string/rating"
                    style="@style/content_details_TextView_label"
                    android:layout_marginTop="@dimen/layout_margin_top"
                    android:layout_below="@+id/plotSynopsis"
                    />
                <TextView
                    android:id="@+id/user_Rating"
                    style="@style/content_details_TextView"
                    android:layout_below="@+id/rating"
                    />
                <TextView
                    android:id="@+id/release"
                    android:text="@string/release"
                    style="@style/content_details_TextView_label"
                    android:layout_marginTop="@dimen/layout_margin_top"
                    android:layout_below="@+id/user_Rating"
                    />
                <TextView
                    android:id="@+id/release_dates"
                    style="@style/content_details_TextView"
                    android:layout_below="@+id/release"
                    />

            </LinearLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>

</RelativeLayout>
